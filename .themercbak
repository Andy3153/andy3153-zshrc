        export PS1="%(?.%K{green}%F{black} ‚àö %f%k.%K{red}%F{black} √ó %f%k)%K{black} ${emojis[$(($RANDOM%43))]} %n@%M %k%K{$_promptColorUID}%F{black} > %f%k "
        export RPS1="%K{$_promptColorUID}%F{black} üóÅ %(5~|%-2~/‚Ä¶/%2~|%4~)   %f%k%K{yellow}%F{black} üóè %h %f%k"
    }

  # Blocks Dark theme
    function _setBlocksDark()
    {
        _themercCheckUID
        export PS1="%(?.%K{black}%F{green} ‚àö %f%k.%K{black}%F{red} √ó %f%k)%K{black}%F{$_promptColorUID}| %n %k%K{black}| > %f%k "
        export RPS1="%K{black}%F{$_promptColorUID} üóÅ  %(5~|%-2~/‚Ä¶/%2~|%4~) |%f%k%K{black}%F{yellow} üóè %h %f%k"
    }

  # Blocks v2 theme
    function _setBlocksv2()
    {
        _themercCheckUID
        export PS1="%K{black}%F{$_promptColorUID}\%(?.%K{black}%F{green} ‚àö %f%k.%K{black}%F{red} √ó %f%k)%K{black}%F{$_promptColorUID}\ %n@%m %k%K{black}\ > \%f%k "
        export RPS1="%K{black}%F{$_promptColorUID}/ üóÅ  %(5~|%-2~/‚Ä¶/%2~|%4~) /%f%k%K{black}%F{yellow} üóè %h %F{$_promptColorUID}/"
    }

  # KeepItSimple
    function _setKeepItSimple()
    {
        _themercCheckUID
        export PS1="%F{$_promptColorUID}\ %n@%m \ %(?.%F{green}.%F{red})> %f%F{$_promptColorUID}\%f "
        export RPS1="%F{$_promptColorUID} / %(5~|%-2~/‚Ä¶/%2~|%4~) /%f%F{yellow} %h %F{$_promptColorUID}/"
    }

  # Arrows theme; 26/10/20 ~ 17:03:28
    function _setArrows()
    {
        _themercCheckUID
        _themercCheckSSH
        export PS1="%(?.%K{green}%F{black} ‚àö %F{green}%K{black}$(printf '\ue0b0')%f%k.%K{red}%F{black} √ó %F{red}%K{black}$(printf '\ue0b0')%f%k)%K{black} %F{$_promptColorSSH}%n@%M %F{black}%K{$_promptColorUID}$(printf '\ue0b0')%k%K{$_promptColorUID}%F{black} > %k%F{$_promptColorUID}$(printf '\ue0b0')%f%k "
        export RPS1="%F{$_promptColorUID}$(printf '\ue0b2')%K{$_promptColorUID}%F{black} üóÅ %(5~|%-2~/‚Ä¶/%2~|%4~) %F{black}%K{$_promptColorUID} $(printf ' \ue0b2 ')%f%k%K{black}%F{white} üóè %h %f%k"
    }


